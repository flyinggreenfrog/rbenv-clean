#!/usr/bin/env bash
#
# Summary: Uninstall all non-default gems
#
# Usage: rbenv clean

set -e

uninstall() {
    list=`gem list --no-versions`
    for gem in $list; do
        gem uninstall $gem -aIx || true
    done
    gem list
}

#rbenv versions --bare
RBENVPATH=`rbenv root`
echo $RBENVPATH
RUBIES=`ls $RBENVPATH/versions`
for ruby in $RUBIES; do
    echo '---------------------------------------'
    echo $ruby
    rbenv local $ruby
    uninstall
    rm -f .rbenv-version
done
rm -f .rbenv-version